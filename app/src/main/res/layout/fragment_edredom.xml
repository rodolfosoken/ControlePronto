<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rodolfo.controlepronto.EdredomActivity">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Adicionar Edredom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="32dp"
            android:id="@+id/rolEdredom"
            android:hint="NÂº ROL"
            android:inputType="number"
            android:paddingTop="10dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/prateleiraText"
            android:hint="Prateleira"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:layout_alignBaseline="@+id/rolEdredom"
            android:layout_alignBottom="@+id/rolEdredom"
            android:layout_toRightOf="@+id/rolEdredom"
            android:layout_toEndOf="@+id/rolEdredom"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <Button
            android:text="Adicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bAdicionarEdredom"
            android:layout_below="@+id/prateleiraText"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/bAdicionarEdredom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/edredomList"
            android:layout_below="@+id/bAdicionarEdredom"
            android:layout_height="match_parent"
            android:paddingBottom="60dp" />
    </LinearLayout>

</FrameLayout>
